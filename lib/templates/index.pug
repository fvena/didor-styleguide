doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")

    title Styleguide

    style.
      .pre {
        color: #657b83;
        background-color: #f9fafc;
        border: 1px solid #E0E6ED;
        border-radius: 3px;
        padding:20px;
        line-height: 21px;
        font-size: 13px;
        font-family: Menlo,Monaco,Courier,monospace;
        font-weight: 500;
        -webkit-font-smoothing: antialiased;
      }

      .pre-comment {
        color: #a9b6b6;
        font-style: italic;
      }

      .pre-tag {
        color: #073642;
      }

      .pre-class {
        color:#218CD0
      }

      .pre-id { color:#cb4b16}

      .pre-attr{
        color: #2aa198;
      }

      .pre-value {
        color: #d33682;
      }

      .pre-doctype,
      .pre-yield,
      .pre-keyword,
      .pre-default,
      .pre-function,
      .pre-var,
      .pre-filter,
      .pre-blockcode,
      .pre-code { color: pink; }

  body
    h1 Styleguide 3
    time.generated Generated at #{Date()}

    div !{menu}

    each elements,index in components
      h2= elements.name
      h4 Estados
      p= elements.statuses

      p !{elements.description}

      h4 Ejemplo

      iframe(src="javascript:'<html><head><link rel=\"stylesheet\" type=\"text/css\" href=\"styles/main.css\"></head><body>" + elements.exampleHTML +"</body>';")

      h4 Higlight

      pre.pre !{elements.exampleCode}
